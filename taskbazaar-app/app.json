{
  "expo": {
    "name": "taskbazaar-app",
    "slug": "taskbazaar-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "AIzaSyBAMu-wSEMDLl_uIQO8ZSl0tYrhmnV2PTM"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to find nearby tasks."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBAMu-wSEMDLl_uIQO8ZSl0tYrhmnV2PTM"
        }
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.anonymous.taskbazaarapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
